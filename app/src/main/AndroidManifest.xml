<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.radityarin.badminton">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:icon">
        <activity android:name=".ForgotPasswordActivity"/>
        <activity
            android:name=".admin.TempatPageAdmin"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".penyedia.KonfirmasiPesananPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".admin.MainAdminActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".penyedia.SignUp2PenyediaPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".penyedia.MainPenyediaActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".penyedia.SignUpPenyediaPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".penyewa.TempatPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".penyewa.PesanPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".penyewa.SignUpPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LandingPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".penyewa.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="" />
    </application>

</manifest>