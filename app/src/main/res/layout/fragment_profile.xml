<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".penyewa.ProfileFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/profilescreen"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/buttonsetting"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/ic_settings_black_24dp"
        android:backgroundTint="@android:color/white" />

    <LinearLayout
        android:id="@+id/linearsettings"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="54dp"
        android:layout_marginRight="4dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingLeft="8dp"
            android:text="Edit"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btnLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingLeft="8dp"
            android:text="Keluar"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/bagianprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/layout_bg"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namaprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:text="Raditya Rinandyaswara"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:text="Malang, Jawa Timur"
                    android:textAlignment="center" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:elevation="2dp"
            android:src="@drawable/fotodefault"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="4dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bagianprofile"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#FAFAFA">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:src="@drawable/email"/>

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ktp"/>

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:src="@drawable/gender"/>
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:src="@drawable/address"/>
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:src="@drawable/phone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email" />

                    <TextView
                        android:id="@+id/emailprofile"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="None" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No KTP" />

                    <TextView
                        android:id="@+id/noktpprofile"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="None" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenis Kelamin" />

                    <TextView
                        android:id="@+id/jeniskelaminprofil"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Laki-laki" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alamat" />

                    <TextView
                        android:id="@+id/alamatprofil"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Jl. Watugong no 20" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nomor telepon" />

                    <TextView
                        android:id="@+id/nohpprofile"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="None" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</FrameLayout>